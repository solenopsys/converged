{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "baseUrl": "/app",
    "paths": {
      "@/*": ["/app/dag-core/src/*"],
      "dag-api": ["/app/dag-api"],
      "dag-api/*": ["/app/dag-api/*"],
      "back-core": ["/app/back-core/src"],
      "back-core/*": ["/app/back-core/src/*"],
      "nrpc": ["/app/nrpc/src"],
      "nrpc/*": ["/app/nrpc/src/*"],
      "../../dag-types/interface": ["/app/dag-api/interface"],
      "../../dag-types/interface.ts": ["/app/dag-api/interface.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
